{
  "name": "hn-hiring-lens",
  "version": "0.1.0",
  "description": "Chrome extension to filter and highlight comments on HN threads",
  "main": "hn-thread-filter/content.js",
  "scripts": {
    "build": "node scripts/build.js",
    "package": "node scripts/package.js",
    "dev": "npm run build",
    "validate": "node scripts/validate-manifest.js",
    "lint": "eslint hn-thread-filter/*.js --fix",
    "watch": "nodemon --watch hn-thread-filter --ext js,css,json --exec 'npm run build'",
    "clean": "rm -rf dist *.zip",
    "test": "npm run validate && npm run lint",
    "release": "npm run test && npm run package"
  },
  "keywords": [
    "chrome-extension",
    "hacker-news",
    "filter",
    "jobs",
    "hiring"
  ],
  "author": "HN Thread Filter Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.0.0",
    "nodemon": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hn-thread-filter.git"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}